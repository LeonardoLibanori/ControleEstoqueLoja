@model ControleEstoqueLoja.Models.Venda
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Cupom Venda #@Model.Id</title>
    <style>
        body {
            font-family: 'Courier New', Courier, monospace;
            width: 72mm;
            margin: 0;
            padding: 2mm;
            color: #000;
        }
        .header { text-align: center; margin-bottom: 6px; }
        .header h1 { margin: 0; font-size: 16px; text-transform: uppercase; }
        .info { font-size: 11px; margin-bottom: 3px; line-height: 1.1; }
        .divisor { border-top: 1px dashed #000; margin: 6px 0; width: 100%; }
        .tabela { width: 100%; font-size: 10px; border-collapse: collapse; table-layout: fixed; }
        .tabela th { border-bottom: 1px solid #000; padding-bottom: 2px; }
        .tabela td { padding: 2px 0; word-wrap: break-word; }
        .tabela-totais { width: 100%; font-size: 12px; margin-top: 6px; }
        .valor-final { font-size: 15px; font-weight: bold; border-top: 1px solid #000; }
        .footer { text-align: center; margin-top: 12px; font-size: 10px; }
        .nao-fiscal { font-size: 10px; font-weight: bold; border: 1px solid #000; padding: 2px; margin: 5px 0; display: inline-block; }
        @@media print {
            .no-print { display: none; }
            body { width: 72mm; padding: 0; margin: 0; }
            @@page { margin: 0; }
        }
        /* pequenas melhorias */
        .right { text-align: right; }
        .center { text-align: center; }
    </style>
</head>
<body onload="window.print()">

    <div class="header">
        <h1>LOJA</h1>
        <div class="info">
            CNPJ: 00.000.000/0001-00<br>
            Rua Exemplo, 123 - Centro<br>
            Tel: (11) 99999-9999
        </div>
    </div>

    <div class="divisor"></div>
    <div class="info">
        <strong>VENDA: @Model.Id.ToString("D6")</strong><br>
        DATA: @Model.DataVenda.ToString("dd/MM/yyyy HH:mm:ss")<br>
        CPF: @(string.IsNullOrEmpty(Model.CPFCliente) ? "CONSUMIDOR NÃO IDENTIFICADO" : Model.CPFCliente)
        <br />
        VENDEDOR: @(string.IsNullOrEmpty(Model.CodigoVendedor) ? "-" : Model.CodigoVendedor)
    </div>
    <div class="divisor"></div>

    <table class="tabela">
        <thead>
            <tr>
                <th style="text-align: left; width: 45%;">ITEM</th>
                <th style="text-align: center; width: 15%;">QTD</th>
                <th style="text-align: right; width: 20%;">UNIT</th>
                <th style="text-align: right; width: 20%;">TOTAL</th>
            </tr>
        </thead>
        <tbody>
            @{
                var i = 1;
            }
            @foreach (var item in Model.Itens)
            {
                var totalItem = (item.PrecoUnitario * item.Quantidade);
                <tr>
                    <td>@((i++).ToString("D2")) @item.Produto.Nome.ToUpper()</td>
                    <td class="center">@item.Quantidade.ToString("N2")</td>
                    <td class="right">@item.PrecoUnitario.ToString("N2")</td>
                    <td class="right">@totalItem.ToString("N2")</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="divisor"></div>

    <table class="tabela-totais">
        <tr>
            <td style="text-align: left;">Subtotal:</td>
            <td class="right">@Model.TotalVenda.ToString("N2")</td>
        </tr>
        <tr>
            <td style="text-align: left;">Pagamento:</td>
            <td class="right">@((Model.MetodoPagamento ?? "N/A").ToUpper())</td>
        </tr>
        @if (Model.ValorRecebido > 0)
        {
            <tr>
                <td style="text-align: left;">Valor Recebido:</td>
                <td class="right">@Model.ValorRecebido.ToString("N2")</td>
            </tr>
        }
        <tr>
            <td style="text-align: left;">Troco:</td>
            <td class="right">@Model.ValorTroco.ToString("N2")</td>
        </tr>
        <tr class="valor-final">
            <td style="text-align: left; padding-top: 5px;">TOTAL R$:</td>
            <td class="right" style="padding-top: 5px;">@Model.TotalVenda.ToString("N2")</td>
        </tr>
    </table>

    <div class="header">
        <span class="nao-fiscal">DOCUMENTO SEM VALOR FISCAL</span>
    </div>

    <div class="footer">
        Obrigado pela preferência!<br>
        <strong>www.cereaisbrasil.com.br</strong><br/>
        Troco calculado e registrado no sistema.
    </div>

    <div class="no-print" style="text-align: center; margin-top: 20px;">
        <button onclick="window.print()" style="padding: 10px;">IMPRIMIR NOVAMENTE</button>
    </div>

</body>
</html>