<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cereal Brasil</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom shadow-sm mb-0">
            <div class="container-fluid">
                @* Tag Helpers mantidas para o link da Home *@
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">CEREAIS BRASIL</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            @* asp-controller="Home" mantido *@
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Estoque</a>
                        </li>
                        <li class="nav-item">
                            @* asp-controller="Caixa" mantido *@
                            <a class="nav-link text-dark" asp-controller="Caixa" asp-action="Index">Caixa</a>
                        </li>
                        <li class="nav-item">
                            @* Link para o histórico sem o emoji *@
                            <a class="nav-link text-dark" asp-controller="Caixa" asp-action="Historico">Histórico</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    
    <main role="main">


        @* Modal Atalhos (Mantido) *@
        <div class="modal fade" id="modalAtalhos" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content border-0 shadow-lg">
                    <div class="modal-header bg-dark text-white">
                        <h5 class="modal-title">⚙️ MENU ADMINISTRATIVO (ALT + M)</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body p-4">
                        <div class="row g-3">
                            <div class="col-6">
                                <button class="btn btn-danger w-100 py-3 fw-bold shadow-sm d-flex align-items-center" data-key="1" onclick="prepararSangria()">
                                    <span style="width: 30px; text-align: left;">1 -</span>
                                    <span class="me-2">💸</span>
                                    <span>SANGRIA</span>
                                </button>
                            </div>
                            <div class="col-6">
                                <button class="btn btn-primary w-100 py-3 fw-bold shadow-sm d-flex align-items-center" data-key="2" onclick="prepararSuprimento()">
                                    <span style="width: 30px; text-align: left;">2 -</span>
                                    <span class="me-2">📥</span>
                                    <span>SUPRIMENTO</span>
                                </button>
                            </div>
                            <div class="col-6">
                                <button class="btn btn-secondary w-100 py-3 fw-bold shadow-sm d-flex align-items-center" data-key="3" onclick="verStatusCaixa()">
                                    <span style="width: 30px; text-align: left;">3 -</span>
                                    <span class="me-2">🏧</span>
                                    <span>CAIXA</span>
                                </button>
                            </div>
                            <div class="col-6">
                                <button class="btn btn-dark w-100 py-3 fw-bold shadow-sm d-flex align-items-center" data-key="4" onclick="realizarFechamento()">
                                    <span style="width: 30px; text-align: left;">4 -</span>
                                    <span class="me-2">🔒</span>
                                    <span>FECHAMENTO</span>
                                </button>
                            </div>
                            <div class="col-6">
                                <button class="btn btn-info w-100 py-3 fw-bold shadow-sm d-flex align-items-center text-white" data-key="5" onclick="verRelatorioCaixa()">
                                    <span style="width: 30px; text-align: left;">5 -</span>
                                    <span class="me-2">📊</span>
                                    <span>RELATÓRIO</span>
                                </button>
                            </div>
                            <div class="col-6">
                                <button class="btn btn-warning w-100 py-3 fw-bold shadow-sm d-flex align-items-center" data-key="6" onclick="reimprimirUltimaVenda()">
                                    <span style="width: 30px; text-align: left;">6 -</span>
                                    <span class="me-2">🖨️</span>
                                    <span>REIMPRIMIR</span>
                                </button>
                            </div>
                            <div class="col-6">
                                <button class="btn btn-outline-dark w-100 py-3 fw-bold shadow-sm d-flex align-items-center" data-key="7" onclick="gerenciarVendedores()">
                                    <span style="width: 30px; text-align: left;">7 -</span>
                                    <span class="me-2">👥</span>
                                    <span>VENDEDORES</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @* Modal Admin (Mantido) *@
        <div class="modal fade" id="modalOperacao" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content border-0 shadow-lg">
                    <div id="headerOperacao" class="modal-header text-white">
                        <h5 class="modal-title" id="tituloOperacao">OPERAÇÃO</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body p-4">
                        <input type="hidden" id="tipoOperacao">
                        <div class="mb-3">
                            <label class="fw-bold text-muted small">VALOR:</label>
                            <input type="text" id="valorOperacao" class="form-control" oninput="formatarMoedaParaSweet(this)">
                        </div>
                        <div class="mb-3">
                            <label class="fw-bold text-muted small">OBSERVAÇÃO:</label>
                            <textarea id="obsOperacao" class="form-control" rows="2"></textarea>
                        </div>
                        <button type="button" id="btnConfirmarOperacao" class="btn btn-lg w-100 fw-bold shadow-sm" onclick="salvarMovimentacao()">CONFIRMAR</button>
                    </div>
                </div>
            </div>
        </div>

        <div id="modalAjudaAtalhos" class="modal-overlay" style="display:none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.8); z-index: 9999; align-items: center; justify-content: center;">
            <div style="background: white; padding: 20px; border-radius: 8px; width: 500px; border-top: 5px solid #ffc107;">
                <h3 style="font-weight: bold; margin-bottom: 15px; text-align: center;">⌨️ ATALHOS DO SISTEMA</h3>
                <hr>
                <div style="display: flex; flex-direction: column; gap: 15px;">
                    <div style="display: flex; justify-content: space-between; align-items: center;">
                        <span class="fw-bold">Ajuda / Atalhos</span>
                        <kbd style="background: #dc3545; color: white; padding: 2px 6px; border-radius: 4px;">ESC</kbd>
                    </div>

                    <div style="display: flex; justify-content: space-between; align-items: center;">
                        <span class="fw-bold">Menu Administrativo</span>
                        <kbd style="background: #6c757d; color: white; padding: 2px 6px; border-radius: 4px;">Alt + M</kbd>
                    </div>

                    <div style="display: flex; justify-content: space-between; align-items: center;">
                        <span class="fw-bold">Ir para o Caixa</span>
                        <kbd style="background: #007bff; color: white; padding: 2px 6px; border-radius: 4px;">Alt + C</kbd>
                    </div>

                    <div style="display: flex; justify-content: space-between; align-items: center;">
                        <span class="fw-bold">Histórico de Vendas</span>
                        <kbd style="background: #17a2b8; color: white; padding: 2px 6px; border-radius: 4px;">Alt + H</kbd>
                    </div>

                    <div style="display: flex; justify-content: space-between; align-items: center;">
                        <span class="fw-bold">Controle de Estoque</span>
                        <kbd style="background: #28a745; color: white; padding: 2px 6px; border-radius: 4px;">Alt + E</kbd>
                    </div>
                </div>
                <hr>
                <button type="button" class="btn btn-warning w-100" onclick="document.getElementById('modalAjudaAtalhos').style.display='none'">ENTENDI (ESC)</button>
            </div>
        </div>

        @RenderBody()
    </main>

    <footer class="footer text-muted text-center py-3">
        <div class="container" style="color: white;">
            &copy; 2026 - Controle de Estoque Cereal Brasil
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="~/js/admin-caixa.js"></script>

   

    @if (Context.Request.Query.ContainsKey("imprimirId"))
    {
        <script>
            window.addEventListener('load', function() {
                var url = '@Url.Action("GerarCupom", "Caixa")' + '?id=' + '@Context.Request.Query["imprimirId"]';
                window.open(url, '_blank');
                window.history.replaceState({}, document.title, window.location.pathname);
            });
        </script>
    }

    @await RenderSectionAsync("Scripts", required: false)

    <script>
        // 1. Corretor de fundo escuro (Backdrop)
        // Usamos delegação de evento no document para evitar erro caso o modal não exista na página
        document.addEventListener('hidden.bs.modal', function (event) {
            if (event.target.id === 'modalAtalhos') {
                document.querySelectorAll('.modal-backdrop').forEach(el => el.remove());
                document.body.style.overflow = 'auto';
            }
        });

        document.addEventListener('keydown', function(e) {

            // Captura o Modal de Atalhos
            const modalElement = document.getElementById('modalAtalhos');

            // Se o modal existir na página atual, verificamos se está visível
            const isVisible = modalElement && modalElement.classList.contains('show');


            // Atalho ALT + C (Caixa) - Sempre funciona
            if (e.altKey && (e.key === 'c' || e.key === 'C')) {
                window.location.href = '/Caixa';
                return;
            }

                    // Atalho ALT + H (Histórico)
        if (e.altKey && (e.key.toLowerCase() === 'h')) {
            window.location.href = '/Caixa/Historico';
        }

        // Atalho ALT + E (Estoque / Home)
        if (e.altKey && (e.key.toLowerCase() === 'e')) {
            window.location.href = '/Home/Index'; // Ajuste se a rota do seu estoque for diferente
        }

            // LÓGICA QUANDO O MODAL ESTÁ ABERTO (NÚMEROS 1-6)
            if (isVisible) {
                if (e.key >= '1' && e.key <= '7') {
                    e.preventDefault();
                    const botao = modalElement.querySelector(`[data-key="${e.key}"]`);
                    if (botao) {
                        botao.click();
                        // Fecha o modal usando a API correta do Bootstrap
                        const modalInstance = bootstrap.Modal.getInstance(modalElement);
                        if (modalInstance) modalInstance.hide();
                    }
                    return;
                }
            }

            // ATALHO ALT + M (Abrir Menu Admin)
            if (e.altKey && (e.key === 'm' || e.key === 'M')) {
                e.preventDefault();
                if (modalElement && !isVisible) {
                    // Tenta pegar instância existente ou cria uma nova
                    let modalInstance = bootstrap.Modal.getInstance(modalElement);
                    if (!modalInstance) {
                        modalInstance = new bootstrap.Modal(modalElement);
                    }
                    modalInstance.show();
                }
                return;
            }

            // LÓGICA DO ESC (Ajuda Global)
            if (e.key === 'Escape') {
                if (window.Swal && Swal.isVisible()) return;

                const campoBusca = document.getElementById("campoBusca");
                if (campoBusca && campoBusca === document.activeElement) {
                    campoBusca.value = "";
                    const sug = document.getElementById("sugestoes");
                    if (sug) sug.style.display = "none";
                    campoBusca.blur();
                    return;
                }

                const modalAjuda = document.getElementById("modalAjudaAtalhos");
                if (modalAjuda) {
                    modalAjuda.style.display = (modalAjuda.style.display === "none" || modalAjuda.style.display === "")
                        ? "flex" : "none";
                }
            }
        });

                                // Cole este bloco e verifique se não há nenhum ponto "." perdido antes ou depois dele
        function gerenciarVendedores() {
            try {
                const modalEl = document.getElementById('modalAtalhos');
                if (modalEl) {
                    const mAtalhos = bootstrap.Modal.getInstance(modalEl);
                    if (mAtalhos) mAtalhos.hide();
                }
            } catch (e) {
                console.log("Modal não estava aberto");
            }

            Swal.fire({
                title: 'Gestão de Vendedores',
                icon: 'info',
                showDenyButton: true,
                confirmButtonText: 'Cadastrar Novo',
                denyButtonText: 'Listar Todos',
                confirmButtonColor: '#28a745',
                denyButtonColor: '#17a2b8',
            }).then((result) => {
                if (result.isConfirmed) {
                    abrirFormularioCadastro();
                } else if (result.isDenied) {
                    abrirListagemVendedores();
                }
            });
        }

                async function abrirListagemVendedores() {
            // Tenta fechar o modal de atalhos se ele existir
            const el = document.getElementById('modalAtalhos');
            if (el) {
                const m = bootstrap.Modal.getInstance(el);
                if (m) m.hide();
            }

            // Abre um carregando para você saber que a função disparou
            Swal.showLoading();

            try {
                const resp = await fetch('/Caixa/ListarVendedores');
                const vendedores = await resp.json();

                    let html = `
        <table class="table table-sm">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Cupom</th>
                    <th class="text-end">Ações</th>
                </tr>
            </thead>
            <tbody>
                ${vendedores.map(v => `
                    <tr>
                        <td>${v.nome}</td>
                        <td><b>${v.codigo}</b></td>
                        <td class="text-end">
                            <button class="btn btn-sm btn-danger" onclick="confirmarExclusaoVendedor('${v.codigo}')">
                                <i class="fas fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                `).join('')}
            </tbody>
        </table>`;

                if(vendedores.length === 0) html = "Nenhum vendedor cadastrado.";

                        Swal.fire({
            title: '🤝 GESTÃO DE VENDEDORES',
            html: html, // Sua tabela com o botão de excluir
            showCancelButton: true,
            confirmButtonText: '<i class="fas fa-plus"></i> NOVO VENDEDOR',
            cancelButtonText: 'FECHAR',
            confirmButtonColor: '#198754', // Verde Bootstrap (Success)
            cancelButtonColor: '#6c757d',  // Cinza Bootstrap (Secondary)
            reverseButtons: true,          // Coloca o cancelar na esquerda e o confirmar na direita
            width: '600px'
        });

            } catch (e) {
                Swal.fire('Erro', 'Não foi possível buscar os dados.', 'error');
            }
                    then((result) => {
            if (result.isConfirmed) {
                abrirFormularioCadastro(); // Faz o botão "Novo Vendedor" da lista funcionar
            }
        });
        }

                function confirmarExclusaoVendedor(codigo) {
            Swal.fire({
                title: 'Excluir Cupom?',
                text: `Deseja realmente remover o vendedor com cupom ${codigo}?`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Sim, excluir!',
                cancelButtonText: 'Cancelar'
            }).then(async (result) => {
                if (result.isConfirmed) {
                    const params = new URLSearchParams();
                    params.append('codigo', codigo);

                    const resp = await fetch('/Caixa/ExcluirVendedor', {
                        method: 'POST',
                        body: params
                    });
                    const res = await resp.json();

                    if (res.success) {
                        Swal.fire('Removido!', 'O cupom foi desativado.', 'success')
                            .then(() => abrirListagemVendedores()); // Recarrega a lista atualizada
                    } else {
                        Swal.fire('Erro', res.message, 'error');
                    }
                }
            });
        }


                function abrirFormularioCadastro() {
            Swal.fire({
                title: 'CADASTRAR VENDEDOR',
                html: `
                    <div class="text-start">
                        <label class="form-label">Nome Completo</label>
                        <input id="nomeV" class="swal2-input m-0 w-100" placeholder="Ex: LEONARDO SILVA">
                        <label class="form-label mt-3">Cupom (Código)</label>
                        <input id="codV" class="swal2-input m-0 w-100" placeholder="Ex: LEO10">
                    </div>
                `,
                showCancelButton: true,
                confirmButtonText: 'SALVAR REGISTRO',
                cancelButtonText: 'VOLTAR',
                confirmButtonColor: '#0d6efd', // Azul
                cancelButtonColor: '#dc3545',  // Vermelho (Danger) para indicar "Sair/Cancelar"
                focusConfirm: false,
                preConfirm: () => {
                    const nome = document.getElementById('nomeV').value.toUpperCase();
                    const codigo = document.getElementById('codV').value.toUpperCase();
                    if (!nome || !codigo) {
                        Swal.showValidationMessage('Por favor, preencha todos os campos!');
                    }
                    return { nome, codigo };
                }
            }).then((res) => {
                if (res.isConfirmed) {
                    salvarVendedorNoBanco(res.value);
                } else if (res.dismiss === Swal.DismissReason.cancel) {
                    // Se ele clicar em VOLTAR, reabre a lista para não fechar tudo
                    abrirListagemVendedores();
                }
            });
        }

        async function salvarVendedorNoBanco(dados) {
            const params = new URLSearchParams();
            params.append('nome', dados.nome);
            params.append('codigo', dados.codigo);

            const resp = await fetch('/Caixa/CadastrarVendedor', { method: 'POST', body: params });
            const res = await resp.json();

            if (res.success) {
                Swal.fire('Sucesso!', 'Vendedor cadastrado com sucesso.', 'success')
                    .then(() => abrirListagemVendedores()); // Recarrega a lista
            } else {
                Swal.fire('Erro', res.message, 'error');
            }
        }

                let barcode = "";
        document.addEventListener('keydown', function (e) {
            // Se estiver em um campo de texto (como o CPF), não bipa
            if (e.target.tagName === "INPUT") return;

            if (e.key === "Enter") {
                if (barcode.length > 3) {
                    buscarProdutoPorCodigo(barcode);
                }
                barcode = "";
            } else {
                barcode += e.key;
            }
        });

        

                        function processarCodigoBalanca(codigo) {
            // Exemplo código: 2 00123 00500 1
            // idProduto = 123 | valorExtraido = 0.500
            const idProduto = parseInt(codigo.substring(1, 6));
            const pesoExtraido = parseFloat(codigo.substring(6, 12)) / 1000;

            fetch(`/Caixa/BuscarPorId?id=${idProduto}`).then(async r => {
                const p = await r.json();
                if(p.success) {
                    // Aqui passamos o pesoExtraido como a QUANTIDADE da venda
                    adicionarAoCarrinho(p.id, p.nome, p.preco, pesoExtraido);
                }
            });
        }



    </script>
</body>
</html>